<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cv) %>:</strong></dt>
  <dd><%= @profile.cv %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @profile.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:graduates_school_in) %>:</strong></dt>
  <dd><%= @profile.graduates_school_in %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              profiles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path(@profile), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%= form_tag({controller: :agreement_letters, action: :upload}, multipart: true) do %>
  <%= file_field_tag "letter_upload", class: 'btn btn-default btn-file' %>
  <%= submit_tag t('.upload', default: t("agreement_letters.upload")),
                 class: 'btn btn-default',
                 id: 'upload_btn' %>
<% end %>
